<?xml version="1.0" ?>
<odoo>
    <record id="subscribe_shift_as_solidarity_wizard" model="ir.ui.view">
        <field name="name">Solidarity shift offer wizard based on shift</field>
        <field name="model">beesdoo.shift.subscribe.shift.solidarity</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="worker_id" />
                    <field name="shift_id" />
                </group>
                <footer>
                    <button
                        type="object"
                        name="create_offer"
                        string="Confirm"
                        class="oe_highlight"
                    />
                    or
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
