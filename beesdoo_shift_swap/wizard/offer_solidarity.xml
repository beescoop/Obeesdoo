<?xml version="1.0" ?>
<odoo>
    <record id="offer_solidarity_shift_wizard" model="ir.ui.view">
        <field name="name">Solidarity shift offer wizard</field>
        <field name="model">beesdoo.shift.offer.solidarity.shift</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="worker_id" />
                    <field name="tmpl_dated_id" />
                </group>
                <footer>
                    <button
                        type="object"
                        name="create_offer"
                        string="Confirm"
                        class="oe_highlight"
                    />
                    or
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
