<odoo>

    <!-- Modifying the form -->
    <template
        id="website_portal_restrict_my_details"
        name="Website Portal Restrict Modification"
        inherit_id="portal.portal_my_details"
    >
        <xpath expr="//div[hasclass('o_portal_details')]/*[1]" position="before">
            <div class="col-lg-12">
                <div class="alert alert-info">
                    <strong>Info !</strong>
                    To modify information that cannot be edited in this form,
                    please contact us.
                </div>
            </div>
        </xpath>
    </template>

    <template
        id="website_portal_restrict_my_details_fields"
        name="Website Portal Restrict Modifications Fields"
        inherit_id="portal.portal_my_details_fields"
    >
        <xpath expr="//label[@for='name']" position="attributes">
            <attribute name="class" add="label-optional" separator=" " />
        </xpath>
        <xpath expr="//input[@name='name']" position="attributes">
            <attribute name="t-att-disabled">1</attribute>
        </xpath>
        <xpath expr="//label[@for='email']" position="attributes">
            <attribute name="class" add="label-optional" separator=" " />
        </xpath>
        <xpath expr="//input[@name='email']" position="attributes">
            <attribute name="t-att-disabled">1</attribute>
        </xpath>
        <xpath expr="//input[@name='company_name']" position="attributes">
            <attribute name="t-att-disabled">1</attribute>
        </xpath>
        <xpath expr="//input[@name='vat']" position="attributes">
            <attribute name="t-att-disabled">1</attribute>
        </xpath>
        <xpath expr="//label[@for='zipcode']" position="attributes">
            <attribute name="class" remove="label-optional" separator=" " />
        </xpath>
    </template>

</odoo>
