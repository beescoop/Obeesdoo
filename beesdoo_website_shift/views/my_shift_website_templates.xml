  <!-- Shifts Exempted Workers -->
  <template
    id="my_shift_exempted_worker"
    name="My Shifts for Exempted Workers"
    page="True">
    <t t-call="website.layout">

      <t t-call="beesdoo_website_shift.my_shift_title"/>

      <section class="wrap">
